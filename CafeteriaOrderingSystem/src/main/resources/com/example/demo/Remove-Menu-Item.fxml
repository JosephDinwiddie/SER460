<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.RemoveMenuItemController">
    <Label text="Remove Menu Items" style="-fx-font-size: 18px;"/>
    
    <!-- Scrollable area for displaying menu items with checkboxes -->
    <ScrollPane fx:id="menuScrollPane" fitToWidth="true">
        <VBox fx:id="menuVBox" spacing="5" alignment="CENTER_LEFT" />
    </ScrollPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Remove Selected Items" onAction="#confirmRemoval"/>
        <Button text="Cancel" onAction="#cancel"/>
    </HBox>
</VBox>
